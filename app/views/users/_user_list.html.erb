<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Select users</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="sidebar-container">
          <li class="sidebar-content pointer">
            <label class="pointer">
              <%= check_box_tag 'shared_with_ids', nil, false, id: 'public' %>
              <span>  Public</span>
            </label>
          </li>
          <% if @users.present? %>
            <% @users.each_with_index do |user, index| %>
              <li class="sidebar-content pointer">
                <label class="pointer">
                  <%= check_box_tag 'shared_with_ids[]', user.id, false, class: 'common' %>
                  <span>  <%= user.display_name %></span>
                </label>
              </li>
            <% end %>
          <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="share-btn">Save changes</button>
      </div>
    </div>
  </div>
</div>